<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">Edit a post</h1>
    <%= form_tag("/posts/#{@post.id}/update") do %>
      <div class="form">
        <div class="form-body">
          <textarea name="content"><%= @post.content %></textarea>
          <input type="submit" value="Save">
        </div>
      </div>
    <% end %>
  </div>
</div>